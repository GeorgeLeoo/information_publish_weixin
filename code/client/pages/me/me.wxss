.avatar {
  display: flex;
  justify-content:center;
  margin-top: 5rpx;
}

.avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.name {
  text-align: center;
  color: #9B9B9B;
  font-size: 40rpx;
  margin: 10rpx 0 30rpx;
}
.container {
  padding: 25rpx;
}
.my_issues{
  display: flex;
  flex-direction: column;
}
.header_line{
  border-top: 1rpx solid #d7d6dc;
  border-bottom:1rpx solid #d7d6dc;
  font-size: 16px;
  color:#62b900;
  padding-top:5px;
  padding-bottom: 5px;
  padding-left: 10px;
}
.time{
  padding-top:5px;
  font-size: 10px;
  color:#bfbfbf;
  padding-left: 10px;
}
.piece{
  border-top: 1rpx solid #d7d6dc;
  border-bottom:1rpx solid #d7d6dc;
  padding-top: 5px;
}
.topic{
  padding-top:5px;
  padding-bottom: 5px;
  padding-left: 10px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
